%h3 Outcome
-if @transactions
  %table
    %thead
      %tr
        %th User:
        %th To:
        %th Summ:
        %th Remainder:
        %th Balance:
        %th Created:
        %th Status:
        %th Decision time:
      %tbody
      - @transactions.each do |t|
        %tr
          %th= t.user.name
          %td= t.remote_account_iban
          %th= t.summ
          %th= t.remainder
          %th= t.balance
          %td= t.created_at.to_formatted_s(:short)
          %th= t.status_from
          %td= t.updated_at.to_formatted_s(:short)
%h3 Income
-if @income
  %table
    %thead
      %tr
        %th From:
        %th Summ:
      %tbody
      - @income.each do |t|
        %tr
          %td= t.account.iban
          %th= t.summ
