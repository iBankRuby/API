= form_for :account_rule do |f|
  - if @rule.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rule.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @rule.errors.full_messages.each do |msg|
          %li= msg

  .actions
    = f.text_field :rule, value: @rule.spending_limit
    = f.submit 'Save'
