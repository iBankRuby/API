%p#notice= notice
%h1 #{@account.iban}
%p Balance: #{@account.balance}

/= link_to 'Edit', edit_account_path(@account)
/\|
= link_to 'Back', accounts_path
%br
%br
%div
%h3 Invitations
%table
	%thead
		%tr
			%th From user_id:
			%th Acception:
	%tbody
	- @invites.each do |invite|
		%tr
			%td= invite.user_from_id
			%td= link_to 'Submit', { :controller => :invites, :action => :update, :id => invite.id }, :method => :patch, :class => 'btn btn-sm btn-danger'
%br
%br
%div
%h3 Outgoing transactions
-if @transactions
	%table
		%thead
			%tr
				%th To:
				%th Summ:
				%th Status:
				%th Created:
		%tbody
		- @transactions.each do |t|
			%tr
				%td= t.remote_account_id
				%td= t.summ
				%td= t.status_to
				%td= t.created_at.to_formatted_s(:short)
%h3 Incoming transactions
-if @income
	%table
		%thead
			%tr
				%td Summ:
				%td From_id:
				%td Created:
		%tbody
		- @income.each do |t|
			%tr
				%td= t.summ
				%td= t.account_id
				%td= t.created_at.to_formatted_s(:short)
%h3 Account users
-if @roles
	%table
		%thead
			%tr
				%th Email:
				%th Role type:
		%tbody
		- @roles.each do |t|
			%tr
				%td= t.user.email
				%td= t.role
%br
%br
%div
	= form_tag account_transactions_path(@account), method: :post do
		= label_tag :title, 'Account Iban'
		= text_field_tag :account
		= label_tag :title, 'Amount'
		= text_field_tag :summ
		= submit_tag 'Send'
