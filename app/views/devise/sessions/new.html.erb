<div class="col-md-6 form_auth">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field input-field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, :class=> "validate form-control form-control-success" %>    
    </div>

    <div class="field input-field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", :class=> "validate form-control form-control-success" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>