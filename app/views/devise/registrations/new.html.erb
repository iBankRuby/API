<div class="col-md-6 col-md-offset-3 form_auth">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field input-field">
    <%= f.label :Full_Name %><br />
    <%= f.text_field :name, autofocus: true, :class=> "validate form-control form-control-success" %>
  </div>

  <div class="field input-field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, :class=> "validate form-control form-control-success" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
