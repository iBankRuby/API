!!!
%html
  %head
  %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %title IBank
  = csrf_meta_tags
  = stylesheet_link_tag  'application', media: 'all', 'data-turbolinks-track': 'reload'
  /%link{href: "https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css" }
  /%link{href: "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css", rel: "stylesheet", integrity: "sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M", crossorigin: "anonymous"}
  /%link{href: "assets/bootstrap.min.css", rel: "stylesheet" }
  %link{href: "http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css", rel: "stylesheet" }
  /%link{href: "assets/nucleo-icons.css", rel: "stylesheet" }
  
  = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %nav.navbar.navbar-toggleable-md
      .container
        %button.navbar-toggler.navbar-toggler-right{"aria-controls" => "navbarNav", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbar-success", "data-toggle" => "collapse", :type => "button"}
          %span.navbar-toggler-bar
          %span.navbar-toggler-bar
          %span.navbar-toggler-bar
        %a.navbar-brand{:href => "/"} iBank
        #navbar-success.collapse.navbar-collapse
          %ul.navbar-nav.ml-auto
            - if user_signed_in?
              %li.nav-item
                .nav-link
                  %i.nc-icon.nc-bell-55{"aria-hidden" => "true"}
              %li.nav-item
                .nav-link
                  %i.nc-icon.nc-single-02{"aria-hidden" => "true"}
                  -if current_user.name != ''
                    #{current_user.name}
                  -else
                    #{current_user.email}
              %li.nav-item
                = link_to destroy_user_session_path, method: :delete, :class => 'nav-link logout' do
                  %i.nc-icon.nc-user-run{"aria-hidden" => "true"}
                  Logout
            - else
              %li.nav-item
                = link_to 'Login', new_user_session_path, :class => 'nav-link'
              %li.nav-item
                = link_to 'Sign Up', new_user_registration_path, :class => 'nav-link'
    / %nav.container-fluid.navbar.navbar-toggleable-md
    /   .container
    /     %a.navbar-brand{:href=> "/"} iBank
    /     .user-profile
    /       - if user_signed_in?
    /         %i.nc-icon.nc-single-02{"aria-hidden" => "true"}
    /           #{current_user.email}
    /         = link_to destroy_user_session_path, method: :delete, :class => 'nav-link logout' do
    /           %p.txt_logout Logout
    /       - else
    /         %li.nav-item
    /           = link_to 'Login', new_user_session_path, :class => 'nav-link'
    .container
      .row.content
        .col-md-12
          = yield
  / %footer.bd-footer.text-muted
  /   .container
  /     %p iBank team, 2017
  %script{ src: "//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js" }
  %script{ src: "//ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js" }
  /%script{ src: "https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" }
  %script{ src: "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js", integrity: "sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4", crossorigin: "anonymous" }
  %script{src: "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js", integrity: "sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1", crossorigin: "anonymous"}
